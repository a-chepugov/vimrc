root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_style = space

[*.json]
indent_style = space

[*.{js,cjs,mjs,ts,ats}]
indent_style = space

[*.py]
indent_style = space

[*.{md,markdown}]
indent_style = tab

[*.sh]
indent_style = tab

[*.vim]
indent_style = space
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
